{
    "name": "GoogleMapsScavengerHunt",
    "description": "Scavenger hunt game with Google Maps",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["*://www.google.com/maps/*"],
            "js": ["loadSidebar.js"]
        },
        {
            "matches": ["*://www.google.com/maps/*"],
            "js": ["manageSidebar.js"],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["sidebar.html"],
            "matches": ["*://www.google.com/*"]
        }
    ]
}